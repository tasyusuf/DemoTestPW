{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "lib": ["ESNext"]
  },
  "include": ["tests/**/*", "pages/**/*", "fixtures/**/*", "utils/**/*", "data/**/*", "playwright.config.ts"],
  "exclude": ["node_modules", "dist", "allure-results", "allure-report", "test-results"]
}

