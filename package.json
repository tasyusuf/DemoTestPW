{
  "name": "demotest",
  "version": "1.0.0",
  "description": "Playwright TypeScript E2E Testing Framework",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:e2e": "playwright test tests/e2e",
    "test:api": "playwright test tests/api",
    "report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "docker:test": "docker-compose up --build",
    "docker:report": "npm run allure:generate && npm run allure:open",
    "docker:full": "docker-compose up --build && npm run allure:generate && npm run allure:open",
    "clean": "rm -rf test-results playwright-report allure-results allure-report",
    "install:browsers": "playwright install chrome"
  },
  "keywords": ["playwright", "typescript", "e2e", "testing", "automation"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "allure-playwright": "^3.4.2",
    "dotenv": "^17.2.3",
    "typescript": "^5.9.3"
  }
}
